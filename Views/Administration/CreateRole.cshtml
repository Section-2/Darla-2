@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>
<hr />

<form asp-action="CreateRole" method="post" class="mt-3">
    <div class="text-danger">
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" style="margin-bottom:10px;" placeholder="Name of new role" required>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Create Role</button>
            <button type="button" class="btn btn-primary" style="width:auto" onclick="history.back()">Cancel</button>
        </div>
    </div>
</form>