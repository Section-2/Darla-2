@using Darla.Models
@using System.Collections.Generic
@model Darla.Models2.ViewModels.MasterJudgeScheduleViewModel


<!DOCTYPE html>
<html lang="en">  
<head>
    <title>Judge Schedule and Ranking</title>
    <link rel="stylesheet" href="~/css/judges.css" asp-append-version="true"/>
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>JUDGE: </h1>
            <h2>Schedule & Surveys</h2>
            <h2>ROOM: @Model.Room.FirstOrDefault().room_name ?? "Not Assigned"</h2>

        </div>
        
        <div class="row">
            <div class="col-sm-6">
                @{
                    int count = 0;
                    foreach (var schedule in Model.RoomSchedule)
                    {
                        <div>
                            @schedule.timeslot 
                            <a asp-action="judge_survey" asp-route-teamNumber="@schedule.team_number">Team @schedule.team_number</a>
                        </div>                        
                        if (++count == 2) // After the second schedule entry
                        {
                            <div>Lunch Break</div> // Insert a lunch break
                        }
                    }
                }
            </div>
            <div class="col-sm-6">
                <h2>Group Ranking</h2>
                <div id="rankingList" class="ranking-list">
                    @{
                        foreach (var schedule in Model.RoomSchedule) // Reuse the filtered and sorted list
                        {
                            <div draggable="true" class="box" data-teamnumber="@schedule.team_number">
                                Team @schedule.team_number
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<div id="formContainer">
    <!-- Dynamically added form will go here -->
    <form id="rankingsForm" asp-controller="Home" asp-action="UpdateRanks" method="post">
        @{
            var counter = 0;
        }
        @foreach (var schedule in Model.RoomSchedule)
        {
            <input type="hidden" name="teamRanks[@counter].Key" value="@schedule.team_number"/>
            <input type="hidden" id="rankForTeam-@schedule.team_number" name="teamRanks[@counter].Value" value=""/>
            counter++;
        }
        <button type="submit">Save Rankings</button>
    </form>
</div>
<script src="~/js/site.js"></script>
</body>
</html>
