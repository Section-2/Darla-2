@using Darla.Models

@model List<Rubric>

    <h2>Task Information</h2>
    @foreach (var classCode in new[] { 402, 413, 414, 455 })
{
    <table>
        <tr>
            <th colspan="4">
                <span style="float: left">IS @classCode</span>
                <span style="float: right"><button>Edit</button></span>
            </th>
        </tr>
        <tr>
            <th>Task Name</th>
            <th>Student Description</th>
            <th>TA Description</th>
            <th>Max Total Points</th>
        </tr>
        @foreach(var rubric in Model.Where(r => r.ClassCode == classCode))
        {
        <tr>
            <td>@rubric.Subcategory</td>
            <td>@rubric.Decsription</td>
            <td>@rubric.InstructorNotes</td>
            <td>@rubric.MaxPoints</td>
        </tr>
        }
        <tr>
            <td colspan="3">Total Max Total Points:</td>
            <td>@Model.Where(r => r.ClassCode == classCode).Sum(r => r.MaxPoints)</td>
        </tr>
    </table>
}
