@model Darla.Models.User

<style>

    .container {
        max-width: 400px;
        margin: 0 auto;
        text-align: left;
        padding: 10px;
        border-radius: 5px; 
    }

    h2 {
        text-align: center;
        color: #DEB841;
    }

    label {
        color: white;
        display: block;
        margin: 10px 10 5px;
    }

    input[type="text"], select {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 3px;
    }

    button {
        display: block;
        margin: 0 auto;
        padding: 10px 20px;
        width: 50%;
        padding: 10px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        font-size: 1em;
    }

</style>

<div class="container">
    <h2>Create an Account</h2>
    <form method="post">
        <label asp-for="NetId">NetID</label>
        <input asp-for="NetId">
        <br />

        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName">
        <br />

        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName">
        <br />

        <label asp-for="PermissionType">Permission Type</label>
        <select asp-for="PermissionType">
            <option value="" selected disabled></option>
            <option value="1">Student</option>
            <option value="2">Professor</option>
            <option value="3">TA</option>
            <option value="4">Judge</option>
            <option value="5">Coordinator</option>
        </select>
        <br />

        <label asp-for="user_password">Password</label>
        <input asp-for="user_password">
        <br />
       
        <button type="submit">Create Account</button>
    </form>
</div>

