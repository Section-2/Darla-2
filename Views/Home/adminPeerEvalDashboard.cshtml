@{
    ViewData["Title"] = "View Peer Evaluation";
}

@using Darla.Models;
@model IEnumerable<PeerEvaluationDash>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom styles to match the layout design */
        .evaluation-container {
            margin-top: 20px;
        }

        .group-header {
            background-color: #007bff;
            color: white;
            padding: 10px;
            font-size: 1.5em;
            border-radius: 5px;
        }

        .member-info {
            display: flex;
            padding: 10px;
            background-color: white;
            border: 1px solid #dee2e6;
            margin-bottom: -1px; /* for seamless cards */
        }

        .score-circle {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            margin-right: 15px; /* spacing between score and name */
        }

        .green {
            background-color: #28a745;
        }

        .red {
            background-color: #dc3545;
        }

        .yellow {
            background-color: #ffc107;
        }

        .member-name, .member-link {
            flex-grow: 1;
            text-align: left;
        }

        .member-link {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container evaluation-container">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>


        @foreach (var group in Model)
        {
            <div class="row mb-3">
                <div class="col-3">
                    <div class="group-header">Group @group.GroupNumber</div>
                </div>
                <div class="col-9">
                    @foreach (var member in group.Members)
                    {
                        var scoreClass = member.Score >= 80 ? "green" : member.Score < 60 ? "red" :
                        "yellow";
                        <div class="member-info">
                            <div class="score-circle @scoreClass">@member.Score</div>
                            <div class="member-name">
                                @member.User.FirstName
                                @member.User.LastName
                            </div>
                            <div class="member-link">
                                <!-- View Sent Button -->
                                <a href="@Url.Action("AdminViewPeerEvalGiven", "Home", new { evaluatorId = member.User.UserId })" class="btn btn-primary btn-sm">View Sent</a>
                                <!-- Other buttons can be added similarly -->
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    <div class="row mb-4">
        <div class="col text-center">
            <p><strong>Score Legend:</strong>
            <span class="badge badge-danger">0-59</span>
            <span class="badge badge-warning">60-79</span>
            <span class="badge badge-success">80-100</span>  
            </p>
        </div>
    </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
