@{
    Layout = null; // Assuming you're using this page independently without a layout page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rubric and Submissions</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body>
    <div class="container mx-auto px-4 py-8">
        <div class="flex items-center mb-8">
            <button onclick="window.history.back()" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Back
            </button>
            <h1 class="mx-auto text-4xl font-bold">Rubric and Submissions</h1>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            @* Dynamically generate course buttons and progress bars *@
            @foreach (var course in new[] { "IS 401", "IS 413", "IS 414", "IS 455" })
            {
                <div class="bg-white shadow-md rounded p-4 hover:bg-gray-100 cursor-pointer">
                    <button class="text-lg font-semibold w-full text-left">
                        @course
                    </button>
                    <div class="w-full bg-gray-200 rounded-full h-2.5 mt-2 relative">
                        <div class="bg-blue-600 h-2.5 rounded-full" style="width: 50%"></div> <!-- Adjust width based on progress -->
                        <span class="absolute right-0 top-0 text-sm transform translate-x-1/2">50%</span> <!-- Adjusted for end of progress bar -->
                    </div>
                </div>
            }

            @* Submissions Card centered and with a controlled width *@
            <div class="col-span-1 md:col-span-2 mx-auto bg-white shadow-md rounded p-4 w-full md:w-3/4 lg:w-1/2">
                <h2 class="text-2xl font-bold mb-4">Submissions</h2>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="font-semibold">GitHub Link</p>
                        <button onclick="openSubmissionPopup('github')" class="mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Submit
                        </button>
                    </div>
                    <div>
                        <p class="font-semibold">Video Walk-through</p>
                        <button onclick="openSubmissionPopup('video')" class="mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function openSubmissionPopup(type) {
            // Popup logic for submissions
            alert(`Submit ${type}`);
        }
    </script>
</body>
</html>
