@model List<EvaluationViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Peer Evaluation Form</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
  .peer-info img {
    max-width: 100px;
    height: auto;
  }
</style>
</head>
<body>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>EvaluatorId</th>
                <th>SubjectId</th>
                <th>UserId</th>
                <th>NetId</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Subject First Name</th>
                <th>Subject Last Name</th>
                <th>Question</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.EvaluatorId</td>
                    <td>@result.SubjectId</td>
                    <td>@result.UserId</td>
                    <td>@result.NetId</td>
                    <td>@result.FirstName</td>
                    <td>@result.LastName</td>
                    <td>@result.SubjFName</td>
                    <td>@result.SubjLName</td>
                    <td>@result.QuestionId</td>
                </tr>
            }
        </tbody>
    </table>



<div class="container">
  <!-- Centered Heading -->
  <div class="row justify-content-center">
    <div class="col-auto">
                <h1>Peer Evaluation - {model.first_name} {model.last_name}</h1>
    </div>
  </div>
  
  <!-- First Student -->
  <div class="row">
    <!-- Left Border - Quarter Column Width -->
    <div class="col-md-3">
      <div class="peer-info text-center">
        @* <img src="student_photo1.jpg" alt="Student's Photo"> *@
        <div>{Model.FirstName} {model.last_name}</div>
        <div>Overall Score: <!-- Overall Score Input Field --></div>
      </div>
    </div>
    
    <!-- Classmates' Evaluations -->
    <div class="col-md-3">
      <div class="peer-evaluation">
        <div class="row">
          <div class="col-12">
            <h2>Classmate 1</h2>
            <p>Evaluation: <!-- Evaluation Textarea --></p>
            <p>Score: <!-- Score Input Field --></p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Classmates' Evaluations -->
    <div class="col-md-3">
      <div class="peer-evaluation">
        <div class="row">
          <div class="col-12">
            <h2>Classmate 2</h2>
            <p>Evaluation: <!-- Evaluation Textarea --></p>
            <p>Score: <!-- Score Input Field --></p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Classmates' Evaluations -->
    <div class="col-md-3">
      <div class="peer-evaluation">
        <div class="row">
          <div class="col-12">
            <h2>Classmate 3</h2>
            <p>Evaluation: <!-- Evaluation Textarea --></p>
            <p>Score: <!-- Score Input Field --></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End of First Student -->

  <!-- Repeat this structure for each additional student -->
</div>

</body>
</html>
