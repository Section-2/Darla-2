@{
    // This line will retrieve the value from the ViewBag and assign it to a local variable.
    var firstName = ViewBag.FirstName;
    var roomSchedule = ViewBag.RoomSchedule;
    List<string> teamMemberNames = ViewBag.TeamMemberNames;
    var roomAssignment = ViewBag.RoomAssignment;
}

<section class="header-section">
  <div class="container">
      <h1 class="welcome-message">Welcome <span>@firstName</span>!</h1>
    <button href="#" class="back-to-home">Back to Home</button>
  </div>
</section>

<main class="main-content">
  <section class="presentation-info">
    <div class="container">
      <div class="card presentation-card">
        <div class="title">Your Presentation</div>
        <div class="info">
          <i class="fa-solid fa-clock icon" style="color: #2e91ff"></i>
          <div class="text">@roomSchedule.timeslot</div>
        </div>
        <br />
        <div class="info">
          <i class="fa-solid fa-door-open icon" style="color: #2e91ff"></i>
          <div class="text">@roomAssignment</div>
        </div>
      </div>
    </div>
  </section>

  <section class="group-info">
    <div class="container">
      <div class="card group-card">
        <div class="title">Group @roomSchedule.team_number</div>
        <div class="members">
          @if (teamMemberNames != null && teamMemberNames.Any())
          {
            @foreach (var name in teamMemberNames)
            {
              <p>@name</p>
            }
          }
          else
          {
            <p>No team members found for this team.</p>
          }
        </div>
      </div>
    </div>
  </section>

  <section class="countdown-info">
    <div class="container">
      <div class="card countdown-card">
        <div class="title">Countdown</div>
        <div class="timer">
            <div id="countdown"></div>
        </div>
      </div>
    </div>
  </section>

  <section class="resources-info">
    <div class="container">
      <div class="card resources-card">
        <div class="title">Resources and Submission</div>
        <div class="links">
          <a href="@Url.Action("StudentProgress", "Student")" class="btn btn-primary">Submission Form</a>
          <a href="@Url.Action("GroupPeerEvals", "Student")" class="btn btn-primary">Peer Evaluation</a>
          <a href="#"  class="btn btn-primary">Sign Out</a>
        </div>
      </div>
    </div>
  </section>
</main>

<style>
  
  .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
  }
  
  .header-section {
      padding: 20px 0;
  }
  
  .header-section .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
  }
  
  .back-to-home {
      border-radius: 20px;
      padding: 15px 30px;
  }
  
  .welcome-message {
      margin: 0;
  }
  
  .main-content {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
  }
  
  .presentation-card .info {
      text-align: left; /* Align text to the left */
      display: flex; /* Use flexbox for alignment */
      align-items: center; /* Center items vertically */
      justify-content: center; /* Center items horizontally */
  }
  
  .presentation-card .icon {
      font-size: 24px; /* Adjust the size of the icon */
      margin-right: 10px; /* Add spacing between the icon and text */
  }
  
  .presentation-card .text {
      font-size: 18px; /* Adjust the size of the text */
      text-align: left; /* Align text to the left */
  }
  
  .card {
      border-radius: 8px;
      box-shadow: 0px 1px 2px 0px rgba(0, 0, 0, 0.25);
      border: 1px solid rgba(99, 96, 96, 1);
      padding: 30px;
      margin-bottom: 20px;
  }
  
  .title {
      text-align: center;
      margin-bottom: 20px;
  }
  
  .icon,
  .text {
      display: inline-block;
      vertical-align: middle;
  }
  
  
  .timer {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
  }
  
  .links {
      display: flex;
      justify-content: center;
      margin-top: 20px;
  }
  
  .link {
      border-radius: 20px;
      padding: 15px 30px;
      text-decoration: none;
      margin: 0 10px;
  }

</style>

<script src="https://kit.fontawesome.com/4c16b1756d.js" crossorigin="anonymous"></script>

<script>
    // Set the date we're counting down to
    var countDownDate = new Date("April 12, 2024 11:00:00").getTime();

    // Update the countdown every 1 second
    var x = setInterval(function () {
        // Get the current date and time
        var now = new Date().getTime();

        // Calculate the remaining time
        var distance = countDownDate - now;

        // Calculate days, hours, minutes, and seconds
        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Display the countdown
        document.getElementById("countdown").innerHTML = days + "d " + hours + "h " + minutes + "m " + seconds + "s ";

        // If the countdown is over, display a message
        if (distance < 0) {
            clearInterval(x);
            document.getElementById("countdown").innerHTML = "EXPIRED";
        }
    }, 1000);
</script>